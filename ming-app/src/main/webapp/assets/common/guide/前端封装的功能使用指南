3.省市插件1
    js/css路径：/assets/common/vendor/city
    <input type="text" id="cityChoice">

    var cityPicker = new HzwCityPicker({
        data: data,
        target: 'cityChoice',
        valType: 'k-v',
        hideCityInput: {
            name: 'city',
            id: 'city'
        },
        hideProvinceInput: {
            name: 'province',
            id: 'province'
        },
        callback: function(){
            alert('OK');
        }
    });
    cityPicker.init();

